            <artifactId>asm-all</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- Camel CXF -->
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-cxf</artifactId>
            <scope>provided</scope>
        </dependency>

        <!-- TODO: ??? -->
